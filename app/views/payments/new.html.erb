<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card p-5 shadow-lg" style="width: 450px;">
    <h1 class="text-primary text-center mb-4">Payment Page</h1>

    <%= form_with url: payments_path, method: :post, local: true do |f| %>
      <% if flash[:alert] %>
        <div class="alert alert-danger text-center"><%= flash[:alert] %></div>
      <% end %>

      <%= hidden_field_tag :booking_id, params[:booking_id] %>

      <div class="mb-3">
        <%= f.label :first_name, "First Name", class: "form-label" %>
        <%= f.text_field :first_name, required: true, class: "form-control", maxlength: 50 %>
      </div>

      <div class="mb-3">
        <%= f.label :last_name, "Last Name", class: "form-label" %>
        <%= f.text_field :last_name, required: true, class: "form-control", maxlength: 50 %>
      </div>

      <div class="mb-3">
        <%= f.label :credit_card_number, "Credit Card Number", class: "form-label" %>
        <%= f.text_field :credit_card_number, required: true, class: "form-control", maxlength: 16, placeholder: "1234 5678 9012 3456" %>
      </div>

      <div class="row mb-3">
        <div class="col">
          <%= f.label :expiry_month, "Expiry Month", class: "form-label" %>
          <%= f.select :expiry_month, (1..12).map { |m| [m, m] }, required: true, class: "form-select" %>
        </div>
        <div class="col">
          <%= f.label :expiry_year, "Expiry Year", class: "form-label" %>
          <%= f.select :expiry_year, (Time.now.year..Time.now.year + 10).map { |y| [y, y] }, required: true, class: "form-select" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :verification_code, "Verification Code (CVV)", class: "form-label" %>
        <%= f.password_field :verification_code, required: true, class: "form-control", maxlength: 3, placeholder: "123" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Pay Now", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
