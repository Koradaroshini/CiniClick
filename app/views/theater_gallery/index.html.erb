<div class="container py-5">
  <h1 class="text-center mb-4">Theater Gallery</h1>

  <% if @movie %>
    <h2 class="text-center mb-4">Available Theaters for "<%= @movie.title %>"</h2>
  <% else %>
    <h2 class="text-center mb-4">All Theaters</h2>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Seats</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @theaters.each do |theater| %>
          <tr>
            <td><%= theater.name %></td>
            <td><%= theater.location %></td>
            <td><%= theater.number_of_seats %></td>
            <td class="text-center">
              <%= link_to "Showtimes", showtime_gallery_index_path(theater_id: theater.id), class: "btn btn-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to "Back to Movie Gallery", movies_gallery_index_path, class: "btn btn-secondary" %>
  </div>
</div>
