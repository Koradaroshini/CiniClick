<div class="container py-5">
  <h1 class="text-center mb-4">Movies</h1>

  <div class="row gx-4 gy-4">
    <% if @movies.present? %>
      <% @movies.each_slice(3) do |movie_row| %>
        <div class="row mb-4">
          <% movie_row.each do |movie| %>
            <div class="col-md-4 d-flex">
              <div class="card shadow-lg border-0 mb-4 flex-fill">
                <% if movie.main_image.attached? %>
                  <%= image_tag movie.main_image, class: "card-img-top", style: "height: 250px; width: 100%; object-fit: contain; background-color: #f8f9fa; padding: 10px;" %>
                <% end %>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title text-center mb-2"><%= movie.title %></h5>
                  <p class="card-text mb-3">
                    <strong>Genre:</strong> <%= movie.genre %><br>
                    <strong>Release Date:</strong> <%= movie.release_date %><br>
                    <strong>Rating:</strong> <%= movie.rating %><br>
                    <strong>Language:</strong> <%= movie.language %>
                  </p>
                  <div class="mt-auto d-flex justify-content-center">
                    <%= link_to "Show this movie", movie_path(movie), class: "btn btn-primary btn-sm me-2" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center">No movies found.</p>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to "New movie", new_movie_path, class: "btn btn-secondary" %>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <%= link_to "Back", admin_url, class: "btn btn-secondary" %>
  </div>

</div>
