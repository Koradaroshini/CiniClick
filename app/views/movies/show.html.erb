<div class="container py-5">
  <h1 class="text-center mb-4">Movie Details</h1>

  <div class="card shadow-lg border-0 mb-4 mx-auto" style="width: 400px;">
    <div class="card-body">
      <%= render @movie %>
    </div>

    <div class="card-footer d-flex justify-content-center">
      <%= link_to "Edit this movie", edit_movie_path(@movie), class: "btn btn-primary btn-sm me-2" %>
      <%= button_to "Destroy this movie", @movie, method: :delete, class: "btn btn-danger btn-sm me-2" %>
      <%= link_to "Back to movies", movies_path, class: "btn btn-secondary btn-sm" %>
    </div>
  </div>
</div>
