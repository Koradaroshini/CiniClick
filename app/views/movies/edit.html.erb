<div class="container py-5">
  <h1 class="text-center mb-4">Editing Movie</h1>

  <div class="card shadow-lg border-0 mb-4 mx-auto" style="width: 500px;">
    <div class="card-body">
      <%= render "form", movie: @movie %>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to "Show this movie", @movie, class: "btn btn-primary btn-sm me-2" %>
    <%= link_to "Back to movies", movies_path, class: "btn btn-secondary btn-sm" %>
  </div>
</div>
