<% content_for :title, "Showtime Details" %>

<div class="container py-5 d-flex justify-content-center">
  <div class="card shadow-lg border-0" style="width: 28rem;">
    <% if notice %>
      <div class="alert alert-success text-center m-3"><%= notice %></div>
    <% end %>

    <div class="card-body">
      <%= render @showtime %>

      <div class="d-flex justify-content-center mt-4 gap-2">
        <%= link_to "Edit this showtime", edit_showtime_path(@showtime), class: "btn btn-warning" %>
        <%= link_to "Back to showtimes", showtimes_path, class: "btn btn-secondary" %>
      </div>

      <div class="d-flex justify-content-center mt-3">
        <%= button_to "Destroy this showtime", @showtime, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
