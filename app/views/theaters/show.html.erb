

<div class="container py-5">
  <h1 class="text-center mb-4">Theater Details</h1>

  <div class="card shadow-lg border-0 mb-4 mx-auto" style="width: 400px;">
    <div class="card-body">
      <%= render @theater %>
    </div>

    <div class="card-footer d-flex justify-content-center">
      <%= link_to "Edit this theater", edit_theater_path(@theater), class: "btn btn-primary btn-sm me-2" %>
      <%= button_to "Destroy this theater", @theater, method: :delete, class: "btn btn-danger btn-sm me-2" %>
      <%= link_to "Back to theater", theaters_path, class: "btn btn-secondary btn-sm" %>
    </div>
  </div>
</div>

