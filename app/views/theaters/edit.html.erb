<% content_for :title, "Editing Theater" %>

<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="col-md-6">
    <div class="card shadow">
      <div class="card-body">
        <h1 class="mb-4 text-center">Editing Theater</h1>
        <%= render 'form', theater: @theater %>
        <div class="mt-4 d-flex justify-content-between">
          <%= link_to 'Show this theater', @theater, class: 'btn btn-info' %>
          <%= link_to 'Back to theaters', theaters_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
