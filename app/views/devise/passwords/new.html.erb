<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card p-5 shadow-lg" style="width: 400px;">
    <h2 class="text-center mb-4">Forgot Your Password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <% if resource.errors.any? %>
        <div class="mb-3">
          <ul class="text-danger">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control #{'is-invalid' if resource.errors[:email].present?}", autofocus: true, autocomplete: "email" %>
        <% if resource.errors[:email].present? %>
          <div class="text-danger mt-1"><%= resource.errors[:email].first %></div>
        <% end %>
      </div>

      <div class="d-grid">
        <%= f.submit "Send Reset Password Instructions", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
